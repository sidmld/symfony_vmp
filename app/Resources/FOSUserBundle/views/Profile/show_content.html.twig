{% trans_default_domain 'FOSUserBundle' %}






<nav id="nav" style="position: fixed; top: 0; left: 3%; width: 100%;">
    <ul>
        <li><a href="#intro" class="active">Profil</a></li>
        <li><a href="#first">Tableau de bord</a></li>
        <li><a href="#second">Données</a></li>
        <li> <a href="#cta"> Parametres  </a></li>
